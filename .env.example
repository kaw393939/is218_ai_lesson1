# Application Configuration (Part 1)
APP_NAME=TinyTools Calculator
APP_VERSION=1.0.0
DEBUG_MODE=false
MAX_RETRIES=3
TIMEOUT=30.0
ALLOWED_USERS=admin,user

# OpenAI Configuration (Part 4)
OPENAI_API_KEY=your-openai-api-key-here

# Chat Model Configuration
CHAT_MODEL=gpt-4o-mini
CHAT_MAX_TOKENS=500
CHAT_TEMPERATURE=0.7

# Budget Configuration (Lesson 4.2)
# Set to 0 for unlimited
CHAT_SESSION_BUDGET=0.50
CHAT_DAILY_BUDGET=5.00
CHAT_BUDGET_WARNING=0.75

# User Tracking
CHAT_USER_ID=default

# Logging Configuration
CHAT_LOG_LEVEL=INFO
CHAT_LOG_FILE=chat.log
CHAT_COST_LOG_FILE=costs.json

# Calculator REPL Configuration (Part 3)
REPL_PRECISION=2
REPL_MAX_VALUE=1000000.0
REPL_WELCOME_MESSAGE="Calculator REPL v1.0"
REPL_SHOW_HELP=true
REPL_LOG_LEVEL=INFO
REPL_LOG_FILE=calculator.log
